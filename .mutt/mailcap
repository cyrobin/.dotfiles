# Handling MIME Attachements
#
# handling x-server/no-x-server
#<Content-Type>; <X viewer>; test=RunningX
#<Content-Type>; <text viewer>
#<Content-Type>; <text converter>; copiousoutput
#
# handling attachement without blocking mutt
#application/pdf; { set -m \; /bin/mv -T %s %s.mv \; ( evince %s.mv >/dev/null 2>&1 \; /bin/rm %s.mv \; ) & } \; disown -a
#

#text/html; ~/.mutt/mutt_bgrun firefox -new-tab %s; test=test -n "$DISPLAY"; needsterminal &;
text/html; ~/.mutt/mutt_bgrun iceweasel %s; test=test -n "$DISPLAY"; needsterminal &;
text/html; w3m -I %{charset} -T text/html; copiousoutput;

image/*;                    ~/.mutt/mutt_bgrun feh -F      %s; test=test -n "$DISPLAY"; needsterminal &;
audio/*;                    ~/.mutt/mutt_bgrun vlc         %s; test=test -n "$DISPLAY"; needsterminal &;
video/*;                    ~/.mutt/mutt_bgrun vlc         %s; test=test -n "$DISPLAY"; needsterminal &;

application/pdf;            ~/.mutt/mutt_bgrun evince      %s; test=test -n "$DISPLAY"; needsterminal &;

application/msword;         ~/.mutt/mutt_bgrun libreoffice %s; test=test -n "$DISPLAY"; needsterminal &;
application/vnd.msword;		~/.mutt/mutt_bgrun libreoffice %s; test=test -n "$DISPLAY"; needsterminal &;
#application/msword;		    word2text %s; copiousoutput
#application/vnd.msword;		word2text %s; copiousoutput


